<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/activity_vertical_margin"
	tools:context=".TakePictureActivity">

	<TextView android:id="@+id/stage_one_instructions_textview"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/stage_one"
		android:textSize="18sp"
		android:layout_marginBottom="10dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageView android:id="@+id/pictureImageview"
		android:layout_width="0dp"
		android:layout_height="260dp"
		android:layout_below="@id/stage_one_instructions_textview"
		android:src="@drawable/tapme"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/stage_one_instructions_textview"/>

	<TextView android:id="@+id/lookingGoodTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_above="@+id/enterTextButton"
		android:layout_below="@id/pictureImageview"
		android:gravity="center"
		android:text="@string/looking_good"
		android:textSize="18sp"
		android:visibility="invisible"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/pictureImageview"
		app:layout_constraintBottom_toTopOf="@+id/enterTextButton"/>

	<Button android:id="@+id/enterTextButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="@string/lets_memeify"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
